<UserControl x:Class="TalkingKeyboard.Modules.SuggestionBoard.Views.SuggestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/">
    <!--prism:ViewModelLocator.AutoWireViewModel="True">-->
    <UserControl.Resources>
        <Style x:Key="SuggestionTextBoxStyle"
                   TargetType="TextBlock">
            <Setter Property="FontSize" Value="25" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="SuggestionBorderStyle"
                   TargetType="Border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1,1,1,1" />
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource SuggestionBorderStyle}">
        <TextBlock
                 Style="{StaticResource SuggestionTextBoxStyle}"
                 Text="{Binding Suggestion.Text, FallbackValue=Suggestion}" />
    </Border>
</UserControl>
