<metro:MetroWindow x:Class="TalkingKeyboard.Shell.Views.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:prism="http://prismlibrary.com/"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   xmlns:const="clr-namespace:TalkingKeyboard.Infrastructure.Constants;assembly=TalkingKeyboard.Infrastructure"
                   prism:ViewModelLocator.AutoWireViewModel="True"
                   
                   Title="{Binding Title}"
                   Height="350" Width="525"
                   ShowTitleBar="True"
                   ShowMinButton="True"
                   ShowMaxRestoreButton="True"
                   ShowCloseButton="True"
                   ResizeMode="CanResizeWithGrip"
                   ShowIconOnTitleBar="True" MouseMove="MetroWindow_MouseMove">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Icons.xaml" />
                <ResourceDictionary>
                    <Style x:Key="BoardNavigateButtonStyle"
                           TargetType="Button">
                        <Setter Property="Width" Value="25" />
                        <Setter Property="Height" Value="70" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                    <Style x:Key="BoardNavigateButtonContentStyle"
                           TargetType="Rectangle">
                        <Setter Property="Width" Value="20" />
                        <Setter Property="Height" Value="20" />
                        <Setter Property="MaxWidth" Value="{Binding Width, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
                        <Setter Property="MaxHeight" Value="{Binding Height, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
                        <Setter Property="Fill" Value="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <Button x:Name="PreviousBoardButton"
				DockPanel.Dock="Left"
				Style="{StaticResource BoardNavigateButtonStyle}">
            <Rectangle Style="{StaticResource BoardNavigateButtonContentStyle}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_chevron_left}" />
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>
        <Button x:Name="NextBoardButton"
				DockPanel.Dock="Right"
				Style="{StaticResource BoardNavigateButtonStyle}">
            <Rectangle Style="{StaticResource BoardNavigateButtonContentStyle}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_chevron_right}" />
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionNames.TextViewRegion}"
				Grid.Column="1" Grid.Row="1"
				Grid.ColumnSpan="11" Grid.RowSpan="2">
                <!--<Canvas Background="Aquamarine" />-->
            </ContentControl>

            <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionNames.BoardViewRegion}"
				Grid.Column="2" Grid.Row="4"
				Grid.ColumnSpan="9" Grid.RowSpan="5">
                <!--<Canvas Background="Aquamarine" />-->
            </ContentControl>

            <ContentControl prism:RegionManager.RegionName="{x:Static const:RegionNames.SuggestionRegion}"
				Grid.Column="1" Grid.Row="11"
				Grid.ColumnSpan="11" Grid.RowSpan="2">
                <!--<Canvas Background="Aquamarine" />-->
            </ContentControl>
        </Grid>
    </DockPanel>
</metro:MetroWindow>

